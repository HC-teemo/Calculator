<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huchuan.calculator.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="3"
        android:background="@drawable/button_selector_light"
        android:elevation="0dp"
        android:fontFamily="sans-serif-light"
        android:text="New Text"
        android:textColor="@color/blue"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"
        android:background="@drawable/button_selector_light"
        android:clickable="true"
        android:elevation="3dp"
        android:fontFamily="sans-serif-light"
        android:text="New Text"
        android:textColor="@color/blue"
        android:textSize="40sp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/padding"
        android:columnCount="4"
        android:elevation="0dp"
        android:rowCount="5">

        <Button
            android:id="@+id/clean"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_gray"
            android:fontFamily="sans-serif-light"
            android:text="C"
            android:textColor="@color/blue"
            android:textSize="40sp" />

        <Button
            android:id="@+id/plusminus"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_gray"
            android:fontFamily="sans-serif-light"
            android:text="( )"
            android:textColor="@color/blue"
            android:textSize="40sp" />

        <Button
            android:id="@+id/modulus"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_gray"
            android:fontFamily="sans-serif-light"
            android:text="%"
            android:textColor="@color/blue"
            android:textSize="40sp" />

        <Button
            android:id="@+id/devide"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_gray"
            android:fontFamily="sans-serif-light"
            android:text="รท"
            android:textColor="@color/blue"
            android:textSize="40sp" />

        <Button
            android:id="@+id/seven"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:padding="0dp"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/eight"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/nine"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_gray"
            android:fontFamily="sans-serif-light"
            android:text="ร"
            android:textColor="@color/blue"
            android:textSize="40sp" />

        <Button
            android:id="@+id/four"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/five"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/six"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/minus"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_gray"
            android:fontFamily="sans-serif-light"
            android:text="-"
            android:textColor="@color/blue"
            android:textSize="40sp" />

        <Button
            android:id="@+id/one"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="40sp" />


        <Button
            android:id="@+id/two"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/three"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/plus"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_gray"
            android:fontFamily="sans-serif-light"
            android:text="+"
            android:textColor="@color/blue"
            android:textSize="40sp" />

        <Button
            android:id="@+id/zero"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/dot"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginRight="1dp"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_light"
            android:fontFamily="sans-serif-thin"
            android:text="."
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/equal"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:background="@drawable/button_selector_blue"
            android:fontFamily="sans-serif-light"
            android:text="="
            android:textColor="@color/white"
            android:textSize="40sp" />

    </GridLayout>
</LinearLayout>